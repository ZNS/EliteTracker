@model ZNS.EliteTracker.Models.Views.SolarSystemTasksView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1>@Model.SolarSystem.Name</h1>
</div>
<ul class="nav nav-tabs">
    <li><a href="@Url.Action("Index", new { id = Model.SolarSystem.Id })">Overview</a></li>
    <li><a href="@Url.Action("Comments", new { id = Model.SolarSystem.Id })">Comments</a></li>
    <li class="active"><a href="@Url.Action("Tasks", new { id = Model.SolarSystem.Id })">Tasks</a></li>
</ul>
<div class="items">
    @foreach (var task in Model.Tasks)
    {
        @Html.Partial("Partials/_TaskItem", task)
    }
</div>
<div class="clearfix">
    @Html.Partial("Partials/_Pager", Model.Pager)
</div>