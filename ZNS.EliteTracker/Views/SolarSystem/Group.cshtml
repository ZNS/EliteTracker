@model ZNS.EliteTracker.Models.Documents.SolarSystemGroup
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="GroupEdit">
    <div class="page-header">
        <h1>Solar system groups</h1>
    </div>
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("Index")">Tracked systems</a></li>
        <li class="active"><a href="@Url.Action("Groups")">Groups</a></li>
        <li><a href="@Url.Action("Index", "DB")">EDDB systems</a></li>
    </ul>
    @using (Html.BeginForm())
    {
        <div class="panel panel-default">
            <div class="panel-heading">@(Model.Name ?? "New group")</div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="Heading">Name</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    }
</div>
